        {% for section in vm.Sections %}
            <li class="section-item"><a href="/section/{{ section.slug }}">{{ section.name }}</a></li>
            <div class="subsection-item">
                {% if section.children|length > 0 %}
                    <ul class="chitalka-podrubriki">
                        {% for child in section.children %}
                            <li><a href="/section/{{ section.slug }}/{{ child.slug }}">{{ child.name }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        {% endfor %}
