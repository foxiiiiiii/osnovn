


    
    {% if not logged %}
        <div class="dop-block">
            <div class="menu-title">Авторизация</div>
            <div class="autorization">
                
                <form class="form-inline" action="{{ action_addr }}" method="post">
                    <input type="hidden" name="redirect" value="{{ redirect_url }}">
                    <div class="form-group">
                        <label for="user_login"></label>
                        <input type="text" class="form-control" id="user_login" name="user_login" placeholder="Логин">
                    </div>
                    <div class="form-group">
                        <label for="user_pass"></label>
                        <input type="password" class="form-control" id="user_pass" name="user_pass" placeholder="Пароль">
                    </div>
                    <input type="hidden" name="action" value="userlogin">
                    <button type="submit">Вход</button> 
                </form>
                <div class="no-acc">У вас еще нет аккаунта?</div>
                <div class="acc-reg"><a href="/our-subscribe/">Зарегистрироваться</a></div>
                {{ error }}
            </div>
        </div>
    
    {% else %}
        
        <div class="dop-block">
            <div class="menu-title">Пользователь</div>
            <div class="autorization authorized">
                <div class="autorized-name"><i class="fa fa-user" aria-hidden="true"></i> {{ user.display_name }}
                </div>
                {% if is_subscriber %}
                    <div class="autorized-subs">Подписка: с {{ subscribe_start }} по {{ subscribe_end }}</div>
                {% endif %}
                <div class="form-favorites"><a href="/favorites">Избранное</a></div>
                <div>
                    <form action="{{ action_addr }}" method="post">
                        <input type="hidden" name="action" value="userlogout">
                        <button type="submit">Выйти</button>
                    </form>
                </div>
            
            
            </div>
        </div>
    {% endif %}
    

